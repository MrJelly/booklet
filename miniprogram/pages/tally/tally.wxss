.toadd {
  width:100rpx;
  height:100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #8491C3;
  padding:0;
  background-size:cover;
  position:fixed;
  right:75rpx;
  bottom:100rpx;
  border-radius: 50%;
  z-index: 999;
  text-align: center;
}


.touch-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #ccc;
  width: 100%;
  overflow: hidden;
}
 
.content {
  width: 100%;
  height: 120rpx;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(160rpx);
  transform: translateX(160rpx);
  margin-left: -160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  /* padding-right: 20rpx; */
  
}
.detail{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width:100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 28rpx;
  overflow: hidden;
}
.sortindex
{
  width: 80rpx;
  height: 80rpx;
  flex-shrink:0;
}
.sortindex-icon {
  width: 80rpx;
  height: 80rpx;
  flex: 1;
  display: inline-block;
  border-radius: 80rpx;
  text-align:center;
}
.remark
{
  width: 100%;
  overflow: hidden ;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 10rpx;
  display: inline-block;
  text-align:start;
}
.num
{
  max-width:30%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height:80rpx;
  text-align:end;
  flex-shrink:0;
}
 
.del {
  background-color: orangered;
  width: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(160rpx);
  transform: translateX(160rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
 
.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

