
.mask{
width: 100%;
height: 100%;
position: fixed;
top: 0;
left: 0;
background: #000;
z-index: 9000;
opacity: 0.3;
}
.modalDlg{
width: 550rpx;
height: 550rpx;
position: fixed;
top: 25%;
z-index: 9999;
margin: 0rpx 100rpx 185rpx 100rpx;
background-color: #fff;
border-radius:10rpx;
display: flex;
flex-direction: column;
align-items: center;
}
.title{
    display: flex;
    height: 60rpx;
    width:550rpx;
    padding-top: 25rpx;
    padding-bottom: 25rpx;
    justify-content: center;
    border-radius: 30rpx 30rpx 0  0;
    align-items: center;
}
.line{
    width:100%;
    border-top:1rpx solid #dcdde0;
}
.content{
    display: flex;
    font-size: 35rpx;
    padding-top: 25rpx;
    padding-bottom: 25rpx;
    justify-content: center;
    align-items: center;
    
    width:450rpx;
    word-break:break-word;
    height:300rpx;
}
.buttons{
    width:550rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
    /* padding-top:10rpx; */
}

